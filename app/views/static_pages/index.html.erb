<div class="bg" style="position:absolute; width:100%; height:100%; margin-top:-40px;">

	<br /><br />

		<div class="booyah-box col-xs-10 col-xs-offset-1 col-sm-4">

			<h2>
				Join a Game
			</h2>

			<br />

			<% if @open_games.length == 0 %>
				<h3><em>Sorry, there are no open games.</em></h3>
			<% else %>
				<% @open_games.each do |game| %>

					<div style="padding-top:10px; padding-bottom:10px;">

						<div class="col-xs-7 col-xs-3" style="margin-top:-15px; text-align:right;">
						  <h3>
						  	<%= game.game_name %>
						  </h3>
						</div>

						<div>
						  <%= simple_form_for game do |f| %>
						  	<%= f.hidden_field :black_uid, :value => current_user.id %> <!-- UPDATE VALUE FROM '2' to 'current_user.id' -->
								<%= f.submit 'Join', :class => 'btn btn-primary' %>
							<% end %>
						</div>
					</div>

					  <div class='clear'></div>
					  <hr />
				<% end %>
			<% end %>
		</div>
</div>

